<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_search_dialogtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="16dp"
        android:text="搜索"
        android:textColor="@color/youlan"
        android:textSize="20sp"
        android:textStyle="normal" />

    <View
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/dialog_search_dialogtitle"
        android:background="@color/youlan" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/actionbar"
        android:layout_margin="5dp" >

        <Button
            android:id="@+id/dialog_search_start"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_gray_line"
            android:text="起始"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/dialog_search_end"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/button_gray_line"
            android:text="截止"
            android:textColor="@color/black" />
    </LinearLayout>

    <Button
        android:id="@+id/dialog_search_confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_gray"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/youlan"
        android:textSize="18sp" />

</RelativeLayout>