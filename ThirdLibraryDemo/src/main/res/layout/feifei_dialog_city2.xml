<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_search_dialogtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="16dp"
        android:text="请选择城市"
        android:textColor="@color/youlan"
        android:textSize="20sp"
        android:textStyle="normal" />

    <View
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/dialog_search_dialogtitle"
        android:background="@color/youlan" />

    <feifei.library.datepicker.city.CityPicker2
        android:id="@+id/yuntu_dialog_city_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/yuntu_dialog_city_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/button_gray"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/youlan"
        android:textSize="18sp" />

</LinearLayout>