<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:endColor="@color/white" android:gradientRadius="50" android:startColor="@color/gray" android:type="linear"/>

            <stroke android:width="0.5dp" android:color="@color/youlan"/>

            <corners android:radius="5dp"/>

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:endColor="@color/white" android:gradientRadius="50" android:startColor="@color/gray" android:type="linear"/>

            <stroke android:width="0.5dp" android:color="@color/youlan"/>

            <corners android:radius="5dp"/>

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:endColor="@color/white" android:gradientRadius="50" android:startColor="@color/white" android:type="linear"/>

            <stroke android:width="0.5dp" android:color="@color/youlan"/>

            <corners android:radius="5dp"/>

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp"/>
        </shape>
    </item>

</selector>